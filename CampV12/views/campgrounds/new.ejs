<% include ../partials/header %>

<div class="container center">
    <h2 align="center">Create new Camping list</h2>
    <div class="container">
        <div class="form-group ">
            
            <form action="/campgrounds" method="POST">
                <div class="form-group ">
                <input type="text" placeholder=" enter name" name="name" class="form-control">
                </div>
                <div class="form-group ">
                <input type="number" placeholder=" enter price" name="name" class="form-control" min='0.01' step='0.01'>
                </div>
                <div class="form-group ">
                <input type="text" placeholder="enter image url" name="image" class="form-control">
                </div>
                 <div class="form-group ">
                <input type="text" placeholder="enter description" name="descriptions" class="form-control">
                </div>
                 <div class="form-group">
                    <input class="form-control" type="text" name="location" placeholder="add your location address">
                </div>
                <div class="form-group">
                <button class="btn btn-warning btn-block">Submit</button>
                </div>
            </form>
    
        </div>
    </div>
</div>



