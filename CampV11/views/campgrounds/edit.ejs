<% include ../partials/header %>

<div class="container center">
    <h2 align="center">Edit <%= campground.name %></h2>
    <div class="container">
        <div class="form-group ">
            
            <form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST">
                <div class="form-group ">
                <input type="text" value="<%= campground.name %>" name="campground[name]" class="form-control">
                </div>
                <div class="form-group ">
                <input type="text" value="<%= campground.image %>" name="campground[image]" class="form-control">
                </div>
                 <div class="form-group ">
                <input type="text" value="<%= campground.descriptions %>" name="campground[descriptions]" class="form-control">
                </div>
                <div class="form-group ">
                <button class="btn btn-warning btn-block">Submit</button>
                </div>
            </form>
    
        </div>
    </div>
</div>



<% include ../partials/footer %>