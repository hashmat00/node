<% include ../partials/header %>

<div class="container center">
    <h2 align="center">Edit Comment </h2>
    <div class="container">
        <div class="form-group ">
            
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group ">
                <input type="text" value="<%= comment.text %>" name="comment[text]" class="form-control">
                </div>
            
        
                <div class="form-group ">
                <button class="btn btn-warning btn-block">Submit</button>
                </div>
            </form>
    
        </div>
    </div>
</div>



