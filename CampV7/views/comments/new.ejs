<% include ../partials/header %>

<div class="container center">
    <h2 align="center">Create new Comment <%= campground.name %></h2>
    <div class="container">
        <div class="form-group ">
            
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group ">
                <input type="text" placeholder=" enter text" name="comment[text]" class="form-control">
                </div>
                <div class="form-group ">
                <input type="text" placeholder="enter author" name="comment[author]" class="form-control">
                </div>
        
                <div class="form-group ">
                <button class="btn btn-warning btn-block">Submit</button>
                </div>
            </form>
    
        </div>
    </div>
</div>



